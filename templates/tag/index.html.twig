{% extends 'base.html.twig' %}

{% block title %}Hello TagController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Tags</h1>

    <ul class="list-group">
        {% if tags|length > 0 %}
           {% for tag in tags %}
               <li class="list-group-item">{{ tag.label }}
                   {% if tag.posts | length == 1 %}
                       <span class="badge badge-info">1 Post</span>
                    {% elseif tag.posts | length > 1 %}
                        <span class="badge badge-info">{{ tag.posts | length }} Posts</span>
                   {% endif %}
                   <a class="badge badge-danger" href="{{ path('tags_delete', {'id': tag.id }) }}">-</a>
               </li>
           {% endfor %}
        {% else %}
            <li class="list-group-item disabled">No tags found</li>
        {% endif %}
    </ul>

    {{ form(form) }}
</div>
{% endblock %}
